<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#D58A8A"
    tools:context=".AddNewAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="#36115D"
                    android:gravity="center"
                    android:text="Tworzenie nowego konta"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#FCFFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/loginCorrectMessage"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#36115D"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/creatingLogin"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:background="#F1E4FF "
                            android:drawableStart="@drawable/loginicon_1"
                            android:drawablePadding="10dp"
                            android:drawableTint="#36115D"
                            android:ems="10"
                            android:inputType="text" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/passwordCorrectnessMessage"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:gravity="center"
                            android:text="Hasło nie morze być krutsze nirz 6 znaków, posiadać przynajmniej jedną cyfrę, jedną durzą literą oraz znak specjalny."
                            android:textAlignment="center"
                            android:textColor="#36115D"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/creatingPassword"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:background="#F1E4FF "
                            android:drawableStart="@drawable/passwordicon_1"
                            android:drawablePadding="10dp"
                            android:drawableTint="#36115D"
                            android:ems="10"
                            android:inputType="textPassword" />

                        <TextView
                            android:id="@+id/passwordMatchMessage"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="Powturz hasło."
                            android:textAlignment="center"
                            android:textColor="#36115D"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/repeatThePassword"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:background="#F1E4FF "
                            android:drawableStart="@drawable/passwordicon_1"
                            android:drawablePadding="10dp"
                            android:drawableTint="#36115D"
                            android:ems="10"
                            android:inputType="textPassword" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp">

                    <Button
                        android:id="@+id/informationPanelButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:background="#36115D"
                        android:cursorVisible="false"
                        android:fontFamily="@font/artifika"
                        android:gravity="center"
                        android:text="i"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|left|end"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left|end"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|left"
                        android:background="#36115D"
                        android:text="resetuj formularz"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right|end"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="30dp"
                    android:layoutMode="clipBounds"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <Button
                        android:id="@+id/addAnAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="#36115D"
                        android:text="Utwórz konto"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>